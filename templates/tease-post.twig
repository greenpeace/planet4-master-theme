{% extends "tease.twig" %}

{% block content %}
    <h2 class="h2"><a href="{{ post.link }}">{{ post.title|raw }}</a></h2>
        <p>{{ post.excerpt()|truncate( 25, true )|raw }}</p>
        {% if ( post.thumbnail.src ) %}
            <img data-src="{{ post.thumbnail.src }}" loading="lazy">
        {% endif %}
{% endblock %}
