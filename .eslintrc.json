{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "amd":true
  },
  "extends": ["plugin:@wordpress/eslint-plugin/recommended"],
  "globals": {
    "wp": "readonly"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "curly": [
      "error",
      "all"
    ],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "never"
    }],
    "one-var-declaration-per-line": [
      "error",
      "always"
    ],
    "prefer-arrow-callback": [
      "error", {
        "allowNamedFunctions": true
      }
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "camelcase": "off",
    "new-cap": "error",
    "no-var": 1,
    "react/jsx-indent": "off",
    "react/jsx-indent-props": "off",
    "react-hooks/rules-of-hooks": "off",
    "prettier/prettier": "off",
    "@wordpress/dependency-group": "off",
    "operator-linebreak": [
      "error",
      "after"
    ],
    "computed-property-spacing": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "react/jsx-curly-spacing": [
      "error",
      {
        "when": "never",
        "allowMultiline": false
      }
    ],
    "space-unary-ops": [
      "error", {
        "words": true,
        "nonwords": false
      }
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "template-curly-spacing": [
      "error",
      "never"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ]
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "root": true
}


