<div
  id="nav-main"
  class="burger-menu d-lg-none"
  role="dialog"
  aria-modal="true"
  aria-label="{{ __( 'Main navigation menu', 'planet4-master-theme' ) }}"
>
    <div class="burger-menu-header">
        <a
            tabindex="-1"
            class="site-logo"
            href="{{ data_nav_bar.home_url }}"
            aria-label="{{ __('%s home', 'planet4-master-theme')|format(site.name)}}"
        >
            {% include "blocks/site_logo.twig" %}
        </a>

        {% if site_languages is not empty and site_languages|length > 1 %}
            {% include 'language-switcher.twig' %}
        {% endif %}
    </div>

    <div class="nav-wrapper">
        <nav class="nav-items" aria-label="{{ __( 'Menu items', 'planet4-master-theme' ) }}">
            <ul id="accordion-list" class="accordion">
                <li class="burger-menu-item nav-item">
                    <a
                        class="nav-link"
                        href="{{ site.url }}"
                        target="{{ item.target }}"
                        data-ga-category="Menu Navigation"
                        data-ga-action="Home"
                        data-ga-label="{{ page_category }}"
                        tabindex="-1"
                    >
                        {{ __( 'Home', 'planet4-master-theme' ) }}
                    </a>
                </li>

                {% if navbar_menu_items is not empty %}
                    {% include "burger-menu-items.twig" with { menu: navbar_menu_items } %}
                {% endif %}

                {% if donate_menu_items is not empty and donate_menu_items[0].children|length >= 1 %}
                    {% include "burger-menu-items.twig" with { menu: donate_menu_items } %}
                {% endif %}
            </ul>
        </nav>
    </div>

    <div class="burger-menu-footer">
        <button
            class="btn btn-donate"
            onclick="window.location='{{ donate_menu_items[0].link }}';"
            role="link"
            target="{{ item.target }}"
            data-ga-category="Menu Navigation"
            data-ga-action="Donate"
            data-ga-label="{{ page_category }}"
            tabindex="-1"
        >
            {{ donate_menu_items[0].title }}
        </button>
    </div>

    <button
        class="nav-menu-close"
        type="button"
        aria-label="{{ __( 'Close navigation mobile menu', 'planet4-master-theme' ) }}"
        tabindex="-1"
    >
        <span class="visually-hidden">
        {{ __( 'Close navigation mobile menu', 'planet4-master-theme' ) }}
        </span>
    </button>
</div>
<div class="burger-menu-overlay d-lg-none"></div>
