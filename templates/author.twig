{% extends "base.twig" %}

{% block content %}

	<div class="clearfix"></div>
	<div class="skewed-overlay"></div>

	<header class="page-header">
		<div class="container">
			<h1 class="page-header-title">{{ author.name }}</h1>
			<div class="row">
				<div class="col-lg-7 col-md-8 col-sm-12 author-info">
					<figure class="author-image">
						{% if ( author.avatar ) %}
							<img itemprop="image" class="author-pic"
								src="{{ fn('get_avatar_url', author.id, {'size' : 300}) }}"
								alt="{{ author.name }}">
						{% endif %}
					</figure>
					<p class="d-none d-md-block author-bio">{{ author.description|e('wp_kses_post')|raw }}</p>
				</div>
				<div class="col-lg-5 col-md-4 col-sm-12 mt-3 mt-md-0">
					{% include "blocks/share_buttons.twig" with {post:author} %}
					<p class="d-md-none author-bio">{{ author.description }}</p>
				</div>
			</div>
		</div>
	</header>

	<div class="page-template">
		<h3>{{ __( 'Posts by ', 'planet4-master-theme' ) }} {{ author.name }}</h3>

		<div class="row">
			<div class="col-lg-8 multiple-search-result">
				<ul class="list-unstyled">
					{% for post in posts %}
						{% include 'tease-author.twig' %}
					{% endfor %}
				</ul>
			</div>
		</div>

		{% if posts.pagination.total > 1 %}
			<div class="row">
				<div class="col-lg-8">
					<button
						data-content=".multiple-search-result .list-unstyled"
						data-page="1"
						data-total="{{ posts.pagination.total }}"
						data-url="{{ author.path }}"
						class="load-more-mt btn btn-medium btn-small btn-secondary mb-5">Load More</button>
				</div>
			</div>
		{% endif %}
	</div>
{% endblock %}
