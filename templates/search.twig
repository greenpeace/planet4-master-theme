{% extends "base.twig" %}

{% block content %}
	{% set disabled = posts ? '' : 'disabled' %}

	<div class="search-block">
		<div class="container">
			<div class="without-search-result row clearfix">
				<div class="col-md-12">
					<h2 class="result-statement">{{ found_posts }} results for <span>'{{ search_query }}'</span></h2>
					{% if ( not posts ) %}
						<p class="search-info">{{ __( 'We\'re sorry we couldn\'t find any matches for your search term.', domain ) }}</p>
						<ul class="search-help-info">
							<li>{{ __( 'Check for typos, and try your search again', domain ) }}</li>
							<li>{{ __( 'Try searching for somthing else', domain ) }}</li>
							<li>{{ __( 'Search our archive. You\'ll be redirected to the archive site.', domain ) }}</li>
						</ul>
					{% endif %}
					{# <p class="search-info">{{ __( 'We also included results for ', domain ) }} <span class="search-tag">{{ corrected_term }} <i class="icon-cross"></i></span></p> #}
				</div>
				<div class="col-md-12">
					<div class="search-bar">
						<form id="search_form_inner" role="search" class="form" action="{{ data_nav_bar.home_url }}">
							<div class="row">
								<div class="col-md-5">
									<input type="search" class="form-control mb-2 mb-sm-0" placeholder="{{ __( 'Search', domain ) }}" value="{{ search_query }}" name="s" aria-label="Search">
									<input type="hidden" name="orderby" value="{{ selected_sort ?? 'relevant' }}" />
								</div>
								<div class="col-md-4">
									<div class="btn-group btn-block" role="group" aria-label="" id="search-type">
										<button type="button" class="btn btn-secondary btn-medium active">{{ __('This Site', domain ) }}</button>
										<button type="button" class="btn btn-secondary btn-medium">{{ __( 'Archive', domain ) }}</button>
									</div>
								</div>
								<div class="col-md-3">
									<button type="submit" class="btn btn-primary btn-medium search-btn btn-block">
										<i class="fa fa-search"></i> {{ __('Search', domain ) }}
									</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="search-filter-results row clearfix">
				<div class="col-lg-4">
					<div class="filter-sidebar">
						<div class="filter-button hidden-lg-up">
							<button class="btn btn-filter disabled"><i class="icon-filter"></i> {{ __( 'Filters', domain ) }}</button>
						</div>
						<div class="modal fade filter-modal" id="filtermodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog modal-lg" role="document">
								<div class="modal-content">
									<div class="modal-body">
										<h4 class="modal-title">{{ __( 'Refine your search', domain ) }}</h4>
										<button type="button" class="btn btn-transparent closebtn" data-dismiss="modal"><i class="icon-cross"></i></button>
										<div class="row">
											<div class="col-md-6">
												<div id="filter-sidebar-options-modal">
													<div class="filteritem">
														<a data-toggle="collapse" href="#item-modal-issue" aria-expanded="true">
															{{ __( 'ISSUE', domain ) }} <span></span>
														</a>
														<div id="item-modal-issue" class="collapse show" role="tabpanel">
															<ul class="list-unstyled">
																{% for issue in issues %}
																	<li>
																		<label class="custom-control custom-checkbox">
																			<input type="checkbox" class="custom-control-input" {{ disabled }} />
																			<span class="custom-control-indicator"></span>
																			<span class="custom-control-description">{{ issue.name }} ({{ issue.results }})</span>
																		</label>
																	</li>
																{% endfor %}
															</ul>
														</div>
													</div>
													<div class="filteritem">
														<a data-toggle="collapse" href="#item-modal-category" aria-expanded="false" class="collapsed">
															{{ __( 'CATEGORY', domain ) }} <span></span>
														</a>
														<div id="item-modal-category" class="collapse" role="tabpanel">
															<ul class="list-unstyled">
																{% for category in categories %}
																	<li>
																		<label class="custom-control custom-checkbox">
																			<input type="checkbox" class="custom-control-input" {{ disabled }} />
																			<span class="custom-control-indicator"></span>
																			<span class="custom-control-description">{{ category.name }} ({{ category.results }})</span>
																		</label>
																	</li>
																{% endfor %}
															</ul>
														</div>
													</div>
													<div class="filteritem">
														<a data-toggle="collapse" href="#item-modal-content" aria-expanded="false" class="collapsed">
															{{ __( 'CONTENT TYPES', domain ) }} <span></span>
														</a>
														<div id="item-modal-content" class="collapse" role="tabpanel">
															<ul class="list-unstyled">
																{% for content_type in content_types %}
																	<li>
																		<label class="custom-control custom-checkbox">
																			<input type="checkbox" class="custom-control-input" {{ disabled }} />
																			<span class="custom-control-indicator"></span>
																			<span class="custom-control-description">{{ content_type.name }} ({{ content_type.results }})</span>
																		</label>
																	</li>
																{% endfor %}
															</ul>
														</div>
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<div class="filteritem">
													<a data-toggle="collapse" href="#item-modal-campaign" aria-expanded="false" class="collapsed">
														{{ __( 'CAMPAIGN', domain ) }} <span></span>
													</a>
													<div id="item-modal-campaign" class="collapse" role="tabpanel">
														<ul class="list-unstyled">
															{% for campaign in campaigns %}
																<li>
																	<label class="custom-control custom-checkbox">
																		<input type="checkbox" class="custom-control-input" {{ disabled }} />
																		<span class="custom-control-indicator"></span>
																		<span class="custom-control-description">{{ campaign.name }} ({{ campaign.results }})</span>
																	</label>
																</li>
															{% endfor %}
														</ul>
													</div>
												</div>
											</div>
										</div>
										<div class="btnact">
											<button type="button" class="btn btn-transparent btn-medium btn-small cancelbtn" data-dismiss="modal">{{ __( 'Cancel', domain ) }}</button>
											<button type="button" class="btn btn-primary btn-medium btn-small applybtn">{{ __( 'Apply Filters', domain ) }}</button>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div id="filter-sidebar-options" class="hidden-md-down">
							<h4>{{ __( 'Refine your search', domain ) }}</h4>
							{% if ( filters ) %}
								<div class="active-filter">
									<h5>{{ __( 'ACTIVE FILTERS', domain ) }}</h5>
									<div class="activefilter-list">
										{% for filter in filters %}
											<a href="{{ filter.link }}" class="activefilter-tag">
												{{ filter.name }} <i class="icon-cross"></i>
											</a>
										{% endfor %}
										<a href="#" class="clearall">{{ __( 'Clear All', domain ) }} <i class="icon-cross"></i></a>
									</div>
								</div>
							{% endif %}
							<div class="filteritem">
								<a data-toggle="collapse" href="#item-issue" aria-expanded="true">
									{{ __( 'Issue', domain ) }} <span></span>
								</a>
								<div id="item-issue" class="collapse show" role="tabpanel">
									<ul class="list-unstyled">
										{% for issue in issues %}
											<li>
												<label class="custom-control custom-checkbox">
													<input type="checkbox" class="custom-control-input" {{ disabled }} />
													<span class="custom-control-indicator"></span>
													<span class="custom-control-description">{{ issue.name }} ({{ issue.results }})</span>
												</label>
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
							<div class="filteritem">
								<a data-toggle="collapse" href="#item-campaign" aria-expanded="false" class="collapsed">
									{{ __( 'Campaign', domain ) }} <span></span>
								</a>
								<div id="item-campaign" class="collapse" role="tabpanel">
									<ul class="list-unstyled">
										{% for campaign in campaigns %}
											<li>
												<label class="custom-control custom-checkbox">
													<input type="checkbox" class="custom-control-input" {{ disabled }} />
													<span class="custom-control-indicator"></span>
													<span class="custom-control-description">{{ campaign.name }} ({{ campaign.results }})</span>
												</label>
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
							<div class="filteritem">
								<a data-toggle="collapse" href="#item-category" aria-expanded="false" class="collapsed">
									{{ __( 'Category', domain ) }} <span></span>
								</a>
								<div id="item-category" class="collapse" role="tabpanel">
									<ul class="list-unstyled">
										{% for category in categories %}
											<li>
												<label class="custom-control custom-checkbox">
													<input type="checkbox" class="custom-control-input" {{ disabled }} />
													<span class="custom-control-indicator"></span>
													<span class="custom-control-description">{{ category.name }} ({{ category.results }})</span>
												</label>
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
							<div class="filteritem">
								<a data-toggle="collapse" href="#item-content" aria-expanded="false" class="collapsed">
									{{ __( 'Content type', domain ) }} <span></span>
								</a>
								<div id="item-content" class="collapse" role="tabpanel">
									<ul class="list-unstyled">
										{% for content_type in content_types %}
											<li>
												<label class="custom-control custom-checkbox">
													<input type="checkbox" class="custom-control-input" {{ disabled }} />
													<span class="custom-control-indicator"></span>
													<span class="custom-control-description">{{ content_type.name }} ({{ content_type.results }})</span>
												</label>
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="result-area">
						<div class="sort-filter clearfix">
							<div class="float-right">
								<label class="mr-sm-2" for="select_order">{{ __('Sort by', domain ) }}</label>
								<select id="select_order" name="select_order" class="">
									{% for key, sort_option in sort_options %}
										{% if key == selected_sort %}
											<option value="{{ key }}" selected>{{ sort_option }}</option>
										{% else %}
											<option value="{{ key }}">{{ sort_option }}</option>
										{% endif %}
									{% endfor %}
								</select>
							</div>
						</div>
						{% if ( not posts ) %}
							<div class="search-result-list"></div>
						{% else %}
							<div class="multiple-search-result">
								<ul class="list-unstyled">
									{% for post in posts %}
										{% include ['tease-search.twig', 'tease-'~post.post_type~'.twig', 'tease.twig'] %}
									{% endfor %}
								</ul>
								{{ fn( 'the_posts_pagination', pagination ) }}
								<button class="btn btn-medium btn-small btn-transparent more-btn" style="display: none;">{{ __( 'Show X more results', domain ) }}</button>
							</div>
						{% endif %}
						{% if ( suggestions ) %}
							<div class="suggested-search-terms">
								<h3>{{ __( 'Suggested search terms', domain ) }}</h3>
								<div class="suggested-list row">
									{% for suggestion in suggestions %}
										<div class="col-md-4">
											<ul class="list-unstyled">
												<li><a href="#"> {{ suggestion }}</a></li>
											</ul>
										</div>
									{% endfor %}
								</div>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
